<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - prjCatCoffe</title>
    <script type="importmap"></script>

	<!-- 原本專案樣式 -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/prjCatCoffe.styles.css" asp-append-version="true" />

	<!-- AdminKit 字體與樣式 -->
	<link href="~/adminkit/assets/css/app.css" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap" rel="stylesheet">

	<link rel="preconnect" href="https://fonts.gstatic.com">
	<link rel="shortcut icon" href="img/icons/icon-48x48.png" />
	<!-- 引用bs5 icon -->
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
	<link href="~/css/Layout.css" rel="stylesheet" />
	@await RenderSectionAsync("Styles", required: false)


</head>
<body >
	<div class="wrapper">
		<nav id="sidebar" class="sidebar js-sidebar">
			<div class="sidebar-content js-simplebar">
				<a class="sidebar-brand" href="index.html">
					<div class="sidebar-link-content d-flex justify-content-center align-items-center gap-2 ">
						<span class="align-middle">CatCoffe</span>
						<img id="siderBarIcon" class="align-middle" data-feather="sliders" width="50" height="50" src="https://img.icons8.com/pastel-glyph/50/cat--v3.png" alt="cat--v3" />
					
					</div>
					
				</a>

				<ul class="sidebar-nav text-center">
					<li class="sidebar-header">
						CRUD_MVC
					</li>

					<li class="sidebar-item active">
						<a class="sidebar-link" asp-area="" asp-controller="Member" asp-action="List">					
							<div class="sidebar-link-content d-flex justify-content-center align-items-center gap-2 ">
								<img id="memberIcon" class="align-middle" data-feather="sliders" width=" 30" height="30" src="https://img.icons8.com/ios-glyphs/30/user--v1.png" alt="user--v1" />
								<span class="align-middle">會員</span>
							</div>
						</a>
					
					</li>

					<li class="sidebar-item">
						<a class="sidebar-link" asp-area="" asp-controller="Caterer" asp-action="List">
							<div class="sidebar-link-content d-flex justify-content-center align-items-center gap-2 ">
								<img  id="caterIcon"  class="align-middle" data-feather="sliders" width="30" height="30" src="https://img.icons8.com/external-others-pike-picture/50/external-Caterer-business-others-pike-picture.png" alt="external-Caterer-business-others-pike-picture" />
								<span class="align-middle">業者</span>
							</div>
						</a>
					</li>

					<li class="sidebar-item">
						<a class="sidebar-link" data-bs-toggle="collapse" href="#cafeSubmenu" role="button" aria-expanded="false" aria-controls="cafeSubmenu">
							<div class="sidebar-link-content d-flex justify-content-center align-items-center gap-2 ">
								<img id="catCoffeIcon" class="align-middle" data-feather="sliders" width="30" height="30" src="https://img.icons8.com/ios/50/restaurant.png" alt="restaurant" />
								<span class="align-middle">餐廳資訊</span>
								<i class="bi bi-arrow-right transition-rotate text-black" id="Arrow"></i>
							</div>
							
						</a>
						<!-- 餐廳 子選單 -->
						<div  id="cafeSubmenu">
							<a class="sidebar-link  py-1" asp-controller="Cafe" asp-action="List">
								<div class="sidebar-link-content d-flex justify-content-center align-items-center gap-2 ">
									<span class="align-middle">餐廳</span>
								</div>
								
							</a>
							<a class="sidebar-link  py-1" asp-controller="CafeMeal" asp-action="List">
								<div class="sidebar-link-content d-flex justify-content-center align-items-center gap-2 ">
									<span class="align-middle">料理</span>
								</div>
								
							</a>
							<a class="sidebar-link  py-1" asp-controller="CafeCat" asp-action="List">
								<div class="sidebar-link-content d-flex justify-content-center align-items-center gap-2 ">
									<span class="align-middle">貓咪</span>
								</div>		
							</a>
						</div>
					</li>

					<li class="sidebar-item">
						<a class="sidebar-link" >
							<div class="sidebar-link-content d-flex justify-content-center align-items-center gap-2 ">
								<img id="reserveIcon" class="align-middle" data-feather="sliders" width="30" height="30" src="https://img.icons8.com/ios/50/purchase-order.png" alt="purchase-order" />
								<span class="align-middle">預約</span>
							</div>
						</a>
					</li>

					<li class="sidebar-item">
						<a class="sidebar-link" href="#">
							<div class="sidebar-link-content d-flex justify-content-center align-items-center ">
								<!-- 引用bs5 icon 要用fonsize設定 fs-3大約28px -->
								<i id="orderIcon" class="align-middle align-items-center bi-cart-check-fill" style="font-size: 30px;" data-feather="sliders"></i>
								<span class="align-middle">訂單</span>
							</div>
						</a>
					</li>

					
				</ul>

				
			</div>
	

		
			</nav>
	
		<div class="main d-flex flex-column min-vh-100">
			<nav class="navbar navbar-expand navbar-light navbar-bg" id="navbar-heading">

			<div class="navbar-collapse collapse">
				<ul class="navbar-nav navbar-align">

					<li class="nav-item dropdown">
						<a class="nav-icon dropdown-toggle d-inline-block d-sm-none" href="#" data-bs-toggle="dropdown">

						</a>

						<a class="nav-link dropdown-toggle d-none d-sm-inline-block" href="#" data-bs-toggle="dropdown">
							<img src="~/images/Login.jpg"
								 class="avatar img-fluid rounded me-1"
								 style="clip-path: circle(50% at 50% 50%); width: 40px; height: 40px; object-fit: cover;"
								 alt="登入小icon" />
							<span class="text-dark">會員資訊</span>
						</a>
						<div class="dropdown-menu dropdown-menu-end">
							<a class="dropdown-item" href="#">Login</a>


							<div class="dropdown-divider"></div>
							<a class="dropdown-item" href="#">Log out</a>
						</div>
					</li>
				</ul>
			</div>
			</nav>

			<div class="container ">
				<main class="overflow-auto mt-3" style="min-height: 0; max-height: calc(100vh - 200px);">
					@RenderBody()
				</main>
			
			</div>
			<div class="mt-3" id="footerBlock" >
				<footer class="border-top footer text-muted" style="background-color:#fdf0d5">
					<div class="container">
						&copy; 2025 - prjCatCoffe - <a asp-area="" asp-page="/Privacy">Privacy</a>
					</div>
				</footer>
			</div>
		</div>
		
	</div>
	




	<script src="~/adminkit/assets/app.js"></script>
	//箭頭選轉區塊
	<script>
		const collapseElement = document.getElementById('cafeSubmenu');
		const arrowIcon = document.getElementById('Arrow');

		collapseElement.addEventListener('show.bs.collapse', function () {
		  arrowIcon.classList.add('rotate90');
		});

		collapseElement.addEventListener('hide.bs.collapse', function () {
		  arrowIcon.classList.remove('rotate90');
		});
	</script>
	

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
