@model prjCatCoffe.Models.Member

@{
    ViewData["Title"] = "Create";
}

<h1>新增會員</h1>

<h4>輸入會員資訊</h4>
<hr />
<form asp-action="Create" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-4">
        
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Account" class="control-label"></label>
                    <input asp-for="Account" class="form-control" />
                    <span asp-validation-for="Account" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Phone" class="control-label"></label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Gender" class="control-label"></label>
                    <select asp-for="Gender" class="form-control">
                        <option value="">-- 請選擇性別 --</option>
                        <option value="0">男</option>
                        <option value="1">女</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
             
           
          
                @* 把checkBox並排顯示 *@
                <div class="form-group">
                    <div class="row">
                        <div class="col">
                            <div class="form-check">
                                <input class="form-check-input" asp-for="Status" />
                                <label class="form-check-label" for="Status">
                                    @Html.DisplayNameFor(model => model.Status)
                                </label>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-check">
                                <input class="form-check-input" asp-for="IsCaterer" />
                                <label class="form-check-label" for="IsCaterer">
                                    @Html.DisplayNameFor(model => model.IsCaterer)
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="送出並儲存" class="btn btn-primary" />
                </div>
       
        </div>
        <div class="col-md-4 justify-content-center">
            <h5 class="text-center">預覽頭像</h5>
            <div class="rounded p-3 bg-light d-flex justify-content-center">
       
                <div style="width: 200px; height: 200px; border-radius: 10px; overflow: hidden; border: 3px solid #a8dadc;">
                    <img id="photoPreview"
                         src="~/images/default-Cafe.png"
                         alt="會員頭像預覽"
                         style="width: 100%; height: 100%; object-fit: cover;" />
                </div>
           
            </div>
                <div class="form-group">
                    <label class="control-label">上傳頭貼</label>
                    @* <input type="file" id="imageInput" multiple accept="image/*"> *@
                    <input type="file" name="photo" class="form-control" onchange="previewPhoto(this)" multiple accept=" image /*" />
                </div>
        </div>
    </div>
 </form>
<div>
    <a asp-action="List">取消</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        function previewPhoto(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById("photoPreview").src = e.target.result;
                };
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}
