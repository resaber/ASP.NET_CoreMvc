@model prjCatCoffe.Models.Member

@{
    ViewData["Title"] = "Edit";
}

<h1>編輯會員資料</h1>

<h4>輸入會員資訊</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="MemberId" value="@Model.MemberId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account" class="control-label"></label>
                <input asp-for="Account" class="form-control" />
                <span asp-validation-for="Account" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <select asp-for="Gender" class="form-control">
                    <option value="">-- 請選擇性別 --</option>
                    <option value="0">男</option>
                    <option value="1">女</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl" class="control-label"></label>
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">上傳頭貼</label>
                    <input type="file" name="photo" class="form-control" onchange="previewPhoto(this)" />
             
            </div>
          
            <div class="form-group">
                <label asp-for="CreatedAt" class="control-label"></label>
                @Html.TextBoxFor(model => model.CreatedAt, new
                    {
                        @class = "form-control",
                        @readonly = "readonly",
                        @value = Model.CreatedAt.ToString("HH:mm:ss")
                    })
                <span asp-validation-for="CreatedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpdatedAt" class="control-label"></label>
                @Html.TextBoxFor(model => model.UpdatedAt, new
                    {
                        @class = "form-control",
                        @readonly = "readonly",
                        @value = Model.UpdatedAt.ToString("HH:mm:ss")
                    })
                <span asp-validation-for="UpdatedAt" class="text-danger"></span>
            </div>
            
            @* 把checkBox並排顯示 *@
            <div class="form-group">
                <div class="row">
                    <div class="col">
                        <div class="form-check">
                            <input class="form-check-input" asp-for="Status" />
                            <label class="form-check-label" for="Status">
                                @Html.DisplayNameFor(model => model.Status)                             
                            </label>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-check">
                            <input class="form-check-input" asp-for="IsCaterer" />
                            <label class="form-check-label" for="IsCaterer">
                                @Html.DisplayNameFor(model => model.IsCaterer)
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="送出並儲存" class="btn btn-primary" />
            </div>

        </form>
    </div>
    <div class="col-md-4 justify-content-center">
        <h5 class="text-center">預覽頭像</h5>
        <div class="rounded p-3 bg-light d-flex justify-content-center">

            <div style="width: 200px; height: 200px; border-radius: 10px; overflow: hidden; border: 3px solid #5aa9e6;">
                <img id="photoPreview"
                     src="~/images/default-user.png"
                     alt="會員頭像預覽"
                     style="width: 100%; height: 100%; object-fit: cover;" />
            </div>

        </div>
    </div>
</div>


<div>
    <a asp-action="List">取消</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function previewPhoto(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById("photoPreview").src = e.target.result;
                };
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>

}
